---
eleventyComputed:
  title: "Post preview"
  description: ''
layout: 'layouts/landing.njk'
---

{% set script %}
<script src="https://accounts.google.com/gsi/client" async defer></script>
<script>
  function onSignIn(googleUser) {
    document.dcc_preview_form.t.value = googleUser.credential;
    document.dcc_preview_form.removeAttribute('hidden');
    document.querySelector('.g_id_signin').setAttribute('hidden', true);
  }
</script>
{% endset %}

{{ script | safe }}

<div id="g_id_onload"
    data-client_id="636061184119-c4pof3b538r4ibs8bt6g8qdfth958nc9.apps.googleusercontent.com"
    data-auto_select="true"
    data-callback="onSignIn">
</div>
<div class="g_id_signin"
    data-type="standard"
    data-size="large"
    data-theme="outline"
    data-text="sign_in_with"
    data-shape="rectangular"
    data-logo_alignment="left">
</div>

<form action="/_render" method="post" name="dcc_preview_form" hidden>
  <div class="pad-bottom-400 pad-top-400">
    <label for="fm" class="display-block">FrontMatter (in Yaml format)</label>
    <textarea
      id="fm"
      name="fm"
      rows="5"
      class="width-full rounded-200 pad-200 hairline"
      placeholder="layout: layouts/blog-post.njk"
    ></textarea>
  </div>

  <div class="pad-bottom-400">
    <label for="md" class="display-block">Content (in Markdown format)</label>
    <textarea
      id="md"
      name="md"
      rows="5"
      class="width-full rounded-200 pad-200 hairline"
      placeholder="Loerm ipsum..."></textarea>
  </div>

  <input type="hidden" name="t" />
  <input name="s" type="submit" class="button button-filled material-button button-primary"/>
</form>



