<web-tabs class="events-list">
  <web-tab title="{{ 'i18n.events.upcoming_events' | i18n(locale) }}">
    <div class="display-grid grid-cols-1 grid-gap-400">
      {% for item in collections.currentEvents %}
        {% EventCard item.data %}
      {% endfor %}
    </div>
  </web-tab>

  <web-tab title="{{ 'i18n.events.past_events' | i18n(locale) }}">
    <div class="display-grid grid-cols-1 grid-gap-400">
      {% for item in collections.pastEvents %}
        {% EventCard item.data %}
      {% endfor %}
    </div>
  </web-tab>
</web-tabs>
