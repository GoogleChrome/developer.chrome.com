{% if banner %}
  <div class="banner banner--{{ banner.type }}">
    <div class="banner__inner">
      <div class="banner__text">
        {{ banner.text }}
      </div>
      <div class="banner__actions">
        {% if banner.actions %}
          {% for action in banner.actions %}
            {# FIXME: Button shouldn't hard code a color-blue-medium value. #}
            <a class="material-button button-text color-blue-medium gap-left-auto" href="{{ action.href }}">
              {{ action.text }}
            </a>
          {% endfor %}
        {% endif %}
      </div>
    </div>
  </div>
{% endif %}
