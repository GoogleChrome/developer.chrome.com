<h1 class="type--h2">{{ title | md | safe }}</h1>

{% if subhead %}
<p class="type--h5">{{ subhead }}</p>
{% endif %}

{% if date %}
  <p class="type--caption color-secondary-text">
    {{ 'i18n.common.published_on' | i18n(locale) }}
    <time datetime="{{ helpers.formatDateNumeric(date) }}">
      {{ helpers.formatDateLong(date, locale) }}
    </time>
    {% if updated %}
    <span>â€¢</span>
    {{ 'i18n.common.updated_on' | i18n(locale) }}
    <time datetime="{{ helpers.formatDateNumeric(updated) }}">
      {{ helpers.formatDateLong(updated, locale) }}
    </time>
  {% endif %}
  </p>
{% endif %}

{% set languageListHtml %}{% LanguageList page.url, site, collections, locale %}{% endset %}
{% if languageListHtml %}
<p class="type--caption color-secondary-text">
  {{ 'i18n.common.translated_to' | i18n(locale) }}
  {{ languageListHtml | safe }}
</p>
{% endif %}
