{% set contentItems = null %}
{% set contentType = "" %}

{% if page.url | getContentType === 'articles' %}
  {% set contentItems = collections.articles %}
{% endif %}

{% if page.url | getContentType === 'blog' %}
  {% set contentItems = collections.blogPosts %}
{% endif %}

{% set currentPostIndex = contentItems | indexOfPostByUrl(page.url) %}
{% set previousPost = contentItems[currentPostIndex - 1] %}
{% set nextPost = contentItems[currentPostIndex + 1] %}

<div class="post-navigation">
  <a href="{{ previousPost.url }}" class="post-navigation__link">
    <div class="post-navigation__prev">
      {% if previousPost %}
        <span class="post-navigation__label">{{ 'i18n.nav.post_nav.back' | i18n(locale) }}</span>
        <p class="post-navigation__title">{{previousPost.data.title}}</p>
      {% endif %}
    </div>
  </a>
  <a href="{{ nextPost.url }}" class="post-navigation__link">
    <div class="post-navigation__next" class="post-navigation__link">
      {% if nextPost %}
        <span class="post-navigation__label">{{ 'i18n.nav.post_nav.next' | i18n(locale) }}</span>
        <p class="post-navigation__title">{{nextPost.data.title}}</p>
      {% endif %}
    </div>
  </a>
</div>