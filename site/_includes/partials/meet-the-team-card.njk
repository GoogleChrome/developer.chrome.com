{% from 'macros/icon.njk' import icon with context %}

<div class="featured-card featured-card--bg-yellow rounded-lg width-full">
  <div class="card-title-bar color-blue-medium">
    {{ icon('calendar', {hidden: true}) }}
    <span class="gap-left-300 flex-1 user-select-none">
      {{ 'i18n.events.meet_the_team_card.tag' | i18n(locale) }}
    </span>
  </div>

  {% Img src=site.meetTheTeamImg, alt="Meet the team", width="800", height="400", loading="lazy", class="gap-top-300" %}

  <p class="gap-top-300 color-blue-medium type--h3">
    {{ 'i18n.events.meet_the_team_card.title' | i18n(locale) }}
  </p>

  <p class="gap-top-200 color-black">
    {{ 'i18n.events.meet_the_team_card.body' | i18n(locale) }}
  </p>

  <div class="gap-top-300">
    <a href="/meet-the-team" class="material-button button-text display-inline-flex color-primary">
      {{ 'i18n.events.meet_the_team_card.cta' | i18n(locale) }}
    </a>
  </div>
</div>
